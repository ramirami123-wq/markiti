{% doc %}
  @prompt
    generate benefits table 4 rows 3 columns 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-benefits-table-{{ ai_gen_id }} {
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    display: block;
  }

  .ai-benefits-table-wrapper-{{ ai_gen_id }} {
    overflow-x: auto;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-benefits-table-element-{{ ai_gen_id }} {
    width: 100%;
    border-collapse: collapse;
    background-color: {{ block.settings.table_background }};
  }

  .ai-benefits-table-element-{{ ai_gen_id }} th {
    background-color: {{ block.settings.header_background }};
    color: {{ block.settings.header_text_color }};
    padding: {{ block.settings.cell_padding }}px;
    text-align: {{ block.settings.text_alignment }};
    font-size: {{ block.settings.header_font_size }}px;
    font-weight: 600;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
  }

  .ai-benefits-table-element-{{ ai_gen_id }} td {
    padding: {{ block.settings.cell_padding }}px;
    text-align: {{ block.settings.text_alignment }};
    font-size: {{ block.settings.body_font_size }}px;
    color: {{ block.settings.body_text_color }};
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
  }

  .ai-benefits-table-element-{{ ai_gen_id }} tbody tr:nth-child(even) {
    background-color: {{ block.settings.row_alternate_background }};
  }

  .ai-benefits-table-element-{{ ai_gen_id }} tbody tr:nth-child(odd) {
    background-color: {{ block.settings.table_background }};
  }

  .ai-benefits-table-element-{{ ai_gen_id }} tbody tr:hover {
    background-color: {{ block.settings.row_hover_background }};
  }

  @media screen and (max-width: 749px) {
    .ai-benefits-table-element-{{ ai_gen_id }} th,
    .ai-benefits-table-element-{{ ai_gen_id }} td {
      padding: {{ block.settings.cell_padding | times: 0.7 }}px;
      font-size: {{ block.settings.body_font_size | times: 0.9 }}px;
    }

    .ai-benefits-table-element-{{ ai_gen_id }} th {
      font-size: {{ block.settings.header_font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<benefits-table-{{ ai_gen_id }} class="ai-benefits-table-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-benefits-table-wrapper-{{ ai_gen_id }}">
    <table class="ai-benefits-table-element-{{ ai_gen_id }}">
      <thead>
        <tr>
          <th>{{ block.settings.header_col_1 }}</th>
          <th>{{ block.settings.header_col_2 }}</th>
          <th>{{ block.settings.header_col_3 }}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>{{ block.settings.row_1_col_1 }}</td>
          <td>{{ block.settings.row_1_col_2 }}</td>
          <td>{{ block.settings.row_1_col_3 }}</td>
        </tr>
        <tr>
          <td>{{ block.settings.row_2_col_1 }}</td>
          <td>{{ block.settings.row_2_col_2 }}</td>
          <td>{{ block.settings.row_2_col_3 }}</td>
        </tr>
        <tr>
          <td>{{ block.settings.row_3_col_1 }}</td>
          <td>{{ block.settings.row_3_col_2 }}</td>
          <td>{{ block.settings.row_3_col_3 }}</td>
        </tr>
        <tr>
          <td>{{ block.settings.row_4_col_1 }}</td>
          <td>{{ block.settings.row_4_col_2 }}</td>
          <td>{{ block.settings.row_4_col_3 }}</td>
        </tr>
      </tbody>
    </table>
  </div>
</benefits-table-{{ ai_gen_id }}>

<script>
  (function() {
    class BenefitsTable{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.style.display = 'block';
      }
    }

    customElements.define('benefits-table-{{ ai_gen_id }}', BenefitsTable{{ ai_gen_id }});
  })();
</script>

