{% doc %}
  @prompt
    i want gif
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-gif-block-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    margin: 0 auto;
  }

  .ai-gif-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity }});
  }

  .ai-gif-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-gif-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 16 / 9;
    background-color: {{ block.settings.placeholder_bg_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-gif-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
    opacity: 0.3;
  }

  .ai-gif-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-gif-caption-{{ ai_gen_id }} {
    margin-top: {{ block.settings.caption_spacing }}px;
    text-align: {{ block.settings.caption_alignment }};
    color: {{ block.settings.caption_color }};
    font-size: {{ block.settings.caption_size }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-gif-block-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

<div class="ai-gif-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-gif-wrapper-{{ ai_gen_id }}">
    {% if block.settings.gif_image %}
      <img
        src="{{ block.settings.gif_image | image_url }}"
        alt="{{ block.settings.gif_image.alt | escape }}"
        class="ai-gif-image-{{ ai_gen_id }}"
        loading="lazy"
        width="{{ block.settings.gif_image.width }}"
        height="{{ block.settings.gif_image.height }}"
      >
    {% else %}
      <div class="ai-gif-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-gif-empty-state-{{ ai_gen_id }}">
          Add your GIF image
        </div>
      </div>
    {% endif %}
  </div>

  {% if block.settings.caption != blank %}
    <div class="ai-gif-caption-{{ ai_gen_id }}">
      {{ block.settings.caption }}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "GIF image",
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "gif_image",
      "label": "GIF image"
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    },
    {
      "type": "header",
      "content": "Caption"
    },
    {
      "type": "richtext",
      "id": "caption",
      "label": "Caption text"
    },
    {
      "type": "select",
      "id": "caption_alignment",
      "label": "Caption alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "caption_size",
      "label": "Caption size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 14
    },
    {
      "type": "color",
      "id": "caption_color",
      "label": "Caption color",
      "default": "#212326"
    },
    {
      "type": "range",
      "id": "caption_spacing",
      "label": "Caption spacing",
      "min": 0,
      "max": 40,
      "step": 4,
      "unit": "px",
      "default": 12
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Border radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "default": 0
    },
    {
      "type": "color",
      "id": "placeholder_bg_color",
      "label": "Placeholder background",
      "default": "#f3f3f3"
    },
    {
      "type": "header",
      "content": "Shadow"
    },
    {
      "type": "range",
      "id": "shadow_horizontal",
      "label": "Horizontal offset",
      "min": -12,
      "max": 12,
      "step": 2,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "shadow_vertical",
      "label": "Vertical offset",
      "min": -12,
      "max": 12,
      "step": 2,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "shadow_blur",
      "label": "Blur",
      "min": 0,
      "max": 40,
      "step": 4,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "shadow_opacity",
      "label": "Shadow opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "default": 0.2
    }
  ],
  "presets": [
    {
      "name": "GIF image"
    }
  ]
}
{% endschema %}